{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            2,
            "always"
        ],
        "init-declarations": [
            "error",
            "never"
        ],
        "ignoreForLoopInit": true,
        "prefer-arrow-callback": [
            "error",
            {
                "allowNamedFunctions": true
            }
        ]
    }
}
